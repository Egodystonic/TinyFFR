<Window
    x:Class="TinyFFR.Tests.Integrations.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TinyFFR.Tests.Integrations.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tffrWpf="clr-namespace:Egodystonic.TinyFFR.Wpf;assembly=TinyFFR.Wpf"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="local:MainWindowViewModel"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding ToggleRenderingButtonPressed}" Content="Toggle Rendering" />
            <Button Command="{Binding ChangeLightColourButtonPressed}" Content="Change Light Colour" />
        </StackPanel>
        <tffrWpf:TinyFfrSceneView
            FallbackBrush="LightGray"
            InternalRenderResolution="300,150"
            Renderer="{Binding Renderer}" />
    </DockPanel>
</Window>
